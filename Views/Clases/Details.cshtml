@model Clase

<h1>Detalles de la Clase</h1>

<dl class="row">
    <dt class="col-sm-2">
        Clase
    </dt>
    <dd class="col-sm-10">
        @Model.nombre_clase
    </dd>

    <dt class="col-sm-2">
        Profesor
    </dt>
    <dd class="col-sm-10">
        @Model.profesor?.nombre @Model.profesor?.apellido
    </dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.clase_id">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a>
</div>
