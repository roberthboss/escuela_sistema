@model IEnumerable<Estudiante>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_nacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.grado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.grado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.estudiante_id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.estudiante_id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.estudiante_id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a class="btn btn-success" asp-action="Create">Crear</a>
